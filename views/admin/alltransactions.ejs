<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>RSA & NSB SPORTS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
   <%-include('../layouts/admin/favicon.ejs')%>
  <style>
    .paid-row {
      background-color: #d4edda !important; /* Light green for Paid */
    }
    .table thead {
      background-color: #007aff;
      color: white;
    }
    .btn-back {
      background-color: #007aff;
      color: white;
    }
    .btn-back:hover {
      background-color: #005ecb;
    }
    .paid-row {
    background-color: #d4edda !important;
  }
  </style>
</head>
<body class="p-4">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="mb-0">All Transactions</h2>
      <a href="/admin" class="btn btn-back">‚Üê Back to Dashboard</a>
    </div>
    <table id="transactionTable" class="table table-bordered table-striped align-middle text-center">

      <thead>
        <tr>
          <th>#</th>
          <th>Customer Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Section</th>
          <th>Plan</th>
          <th>Amount (AED)</th>
          <th>Status</th>
          <th>Payment Method</th>
          <th>Card (Last 4)</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach((tx, index) => { %>
          <tr class="<%= tx.paymentStatus === 'paid' ? 'paid-row' : '' %>">
            <td><%= index + 1 %></td>
            <td><%= tx.name %></td>
            <td><%= tx.customerEmail %></td>
            <td><%= tx.phone %></td>
            <td><%= tx.sectionType %></td>
            <td><%= tx.planType %></td>
            <td><%= tx.amountTotal %></td>
            <td><%= tx.paymentStatus %></td>
            <td><%= tx.paymentMethod %></td>
            <td><%= tx.last4 %></td>
            <td><%= tx.createdAt.toLocaleDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script>
    $(document).ready(function () {
      $('#transactionTable').DataTable({
        pageLength: 10,
        order: [[0, 'asc']],
        columnDefs: [
          { targets: 0, searchable: false, orderable: false } // Disable sorting/search on serial number
        ]
      });
    });
  </script>
  
</body>
</html>
