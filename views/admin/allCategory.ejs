                <!-- End Main Header -->
<main id="main">
    <section class="profile-dashboard">
        <div class="inner-header mb-40">
            <h3 class="title">All Categories</h3>

            <form id="searchForm" class="search-dashboard">
                <input type="search" id="searchInput" placeholder="Search categories" />
            </form>
        </div>

        <div class="my-booking-wrap">
            <ul class="booking-table-title flex-three">
                <li><p>Category Name</p></li>
                <li><p>Status</p></li>
                <li><p>Action</p></li>
            </ul>

            <ul id="categoryList" class="booking-table-content mb-60">
                <% categories.forEach(category => { %>
                    <li class="flex-three">
                        <div class="booking-list-table">
                            <p class="date-gues"><%= category.categoryname %></p>
                        </div>

                        <div class="booking-list-table">
                            <p class="date-gues">
                                <%= category.status ? 'Active' : 'Inactive' %>
                            </p>
                        </div>

                        <div class="flex-five action-wrap">
                            <div class="action flex-five" onclick="editCategory('<%= category._id %>')">
                                <i style="color:#eb2444 ;" class="icon-Vector-16"></i>
                            </div>
                            <div class="action flex-five" onclick="deleteCategory('<%= category._id %>')">
                                <i style="color:#eb2444 ;" class="icon-Vector-17"></i>
                            </div>
                        </div>
                    </li>
                <% }); %>
            </ul>

            <!-- Pagination -->
            <div class="row">
                <div  class="col-md-12">
                    <ul  class="tf-pagination flex-five mt-20">
                        <% if (currentPage > 1) { %>
                            <li><a style="background-color:#eb2444 ;" class="pages-link" href="/admin/allcategory?page=<%= currentPage - 1 %>"><i class="icon-29"></i></a></li>
                        <% } %>

                        <% for (let i = 1; i <= totalPages; i++) { %>
                            <li class="pages-item <%= i === currentPage ? 'active' : '' %>">
                                <a style="background-color:#eb2444 ;" class="pages-link" href="/admin/allcategory?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>

                        <% if (currentPage < totalPages) { %>
                            <li><a style="background-color:#eb2444 ;" class="pages-link" href="/admin/allcategory?page=<%= currentPage + 1 %>"><i class="icon--1"></i></a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </section>
</main>



                <%-include('../layouts/admin/footer.ejs')%>
                <!-- Bottom -->
            </div>

        </div>
        <!-- /#page -->
    </div>

