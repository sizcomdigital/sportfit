    <!-- /preload -->

    <div id="wrapper">
        <div id="pagee" class="clearfix">
      <%-include('../layouts/admin/sideheader.ejs')%>

 <main id="main">
  <section class="profile-dashboard">
    <div class="inner-header mb-40">
      <h3 class="title">All Products</h3>
      <form id="searchForm" class="search-dashboard">
        <input type="search" id="searchInput" placeholder="Search products" />
      </form>
    </div>

    <div class="my-booking-wrap">
      <ul class="booking-table-title flex-three">
        <li><p>Image</p></li>
        <li><p>Product Name</p></li>
        <!-- <li><p>Description</p></li> -->
        <li><p>Status</p></li>
        <li><p>Action</p></li>
      </ul>

      <ul id="programList" class="booking-table-content mb-60">
        <% products.forEach(product => { %>
          <li class="flex-three">
            <!-- Product Image -->
            <div class="booking-list-table">
              <% if (product.images && product.images.length > 0) { %>
                <div class="image">
                  <img style="width: 100px;" src="<%= product.images[0] %>" alt="Product Image">
                </div>
              <% } else { %>
                <div class="no-media">
                  <img style="width: 100px;" src="/default-image.jpg" alt="Default Image">
                </div>
              <% } %>
            </div>

            <!-- Product Name -->
            <div class="booking-list-table">
              <p class="date-gues"><%= product.productName %></p>
            </div>

            <!-- Product Description -->
            <!-- <div class="booking-list-table">
             <div class="date-gues"><%- product.description || 'No description available.' %></div>

            </div> -->

            <!-- Product Status -->
            <div class="booking-list-table">
              <p class="date-gues"><%= product.status || 'Unknown' %></p>
            </div>

            <!-- Actions -->
            <div class="flex-five action-wrap">
              <div class="action flex-five" onclick="editProduct('<%= product._id %>')">
                <i class="icon-Vector-16"></i>
              </div>
              <div class="action flex-five" onclick="deleteProduct('<%= product._id %>')">
                <i class="icon-Vector-17"></i>
              </div>
            </div>
          </li>
        <% }); %>
      </ul>

      <!-- Pagination -->
      <div class="row">
        <div class="col-md-12">
          <ul class="tf-pagination flex-five mt-20">
            <% if (currentPage > 1) { %>
              <li>
                <a style="background-color:#eb2444 ;" class="pages-link" href="/admin/allproducts?page=<%= currentPage - 1 %>">
                  <i class="icon-29"></i>
                </a>
              </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="pages-item <%= i === currentPage ? 'active' : '' %>">
                <a style="background-color:#eb2444 ;" class="pages-link" href="/admin/allproducts?page=<%= i %>"><%= i %></a>
              </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
              <li>
                <a style="background-color:#eb2444 ;" class="pages-link" href="/admin/allproducts?page=<%= currentPage + 1 %>">
                  <i class   ="icon--1"></i>
                </a>
              </li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </section>
</main>


                <%-include('../layouts/admin/footer.ejs')%>
                <!-- Bottom -->
            </div>

        </div>
        <!-- /#page -->
    </div>

    <!-- Modal Popup Bid -->

    <a id="scroll-top" class="button-go"></a>

